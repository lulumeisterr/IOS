/*
 
 Hangers ...
 
 Para criar uma sequencia de 1 ate 30
 Para cada dia dentro do intervalo de 1 ate 30 faca
 
 */

for day in 1...5{
    print("Estou no dia \(day) de Marco")
}

let Student = [
    
    "1 Joao" ,
    "2 Joao",
    "3 Joao",
    "4 Joao",
    "5 Joao",
]


for i in Student{
    print(i)
}


// Para ter acesso a posicao e a variavel

let letter = "Lucas Rodrigues"

//Indice e variavel
for (index , letter) in letter.enumerated(){
    print(index , letter)
}


import Foundation

var megaSena : [Int] = []

while megaSena.count < 6 {
    let number = Int(arc4random_uniform(60)+1)
    if (!megaSena.contains(number)){
        megaSena.append(number)
    }
}

print(megaSena.sorted())



